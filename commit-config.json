{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "SuperClaude Declarative Commit Configuration",
  "description": "Configuration for automated, intelligent commit processing",

  "auto_stage": false,
  "auto_push": false,
  "validate_before_commit": true,

  "commit_rules": {
    "max_files_per_commit": 50,
    "require_description": true,
    "enforce_conventional_commits": true,
    "claude_diagnostic_on_failure": true
  },

  "message_templates": {
    "superclaude_changes": "enhance(superclaude): {description}",
    "config_changes": "config(system): {description}",
    "script_changes": "automation(scripts): {description}",
    "doc_changes": "docs(content): {description}",
    "mixed_changes": "update(multiple): {description}"
  },

  "validation_rules": {
    "check_nix_shell_compliance": true,
    "check_large_files": true,
    "check_sensitive_data": true,
    "max_commit_size_mb": 10
  },

  "exception_handling": {
    "spawn_claude_on_failure": true,
    "create_diagnostic_reports": true,
    "retry_attempts": 0,
    "failure_escalation": "diagnostic_only"
  },

  "metadata": {
    "created": "2025-09-24",
    "version": "1.0.0",
    "framework": "SuperClaude",
    "compliance": "nix_shell_universal"
  }
}